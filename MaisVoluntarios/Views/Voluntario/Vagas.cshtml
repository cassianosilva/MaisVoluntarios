@model IEnumerable<MaisVoluntarios.Core.Empresa>
@{
    ViewBag.Title = "Vagas";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Ser Voluntario <small>(escolha um tarefa para contribuir com a sociedade)</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-e"></i>
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="glyphicon glyphicon-th-list"></i> Vagas</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <tr>
                                <th>Nome da Instituição</th>
                                <th>Telefone</th>
                                <th>Atividade a Desempenhar</th>
                                <th>Ação</th>
                            </tr>

                           @foreach (var item in Model)
                           {

                            <tr>
                                <td><a class="btn btn-default col-lg-12" href="~/Voluntario/PerfilInstituicao/@item.idEmpresa">@item.nomeEmpresa</a></td>
                                <td>(@item.ddd) @item.telefone</td>
                                <td>@item.atividade.nomeAtividade</td>
                                <td><a href="~/Voluntario/Escrevermensagem/@item.idEmpresa" class="btn btn-success">Voluntariar-se</a></td>
                            </tr>

                           }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>