@model MaisVoluntarios.Core.Empresa

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Envio de mensagem <small>escreva sua mensagem</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-e"></i> enviar
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-envelope-o fa-fw"></i> Saida</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <form method="post" action="~/Voluntario/Escrevermensagem">
                                <input value="@ViewBag.idV" hidden="hidden" name="voluntario.idVoluntario" />
                                <div class="form-group">
                                    <label>Instituição</label><br>
                                    
                                    <label>@Model.nomeEmpresa</label>
                                    <input value="@Model.idEmpresa" name="empresa.idEmpresa" hidden="hidden" />
                                </div>
                                <div class="form-group">
                                    <label>Mensagem</label>
                                    <fieldset>
                                        <textarea class="form-control" rows="5" name="mensagem"></textarea>
                                    </fieldset>
                                </div>
                                <button class="btn btn-success form-group" type="submit">Enviar</button>
                            </form>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>