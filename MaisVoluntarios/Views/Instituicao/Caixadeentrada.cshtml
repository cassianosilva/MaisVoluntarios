@model IEnumerable<MaisVoluntarios.Core.Mensagem>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Caixa de Entrada <small>mensagens recebidas</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-e"></i> recebidas
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-envelope-o fa-fw"></i> Entrada</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <tr>
                                <td>Voluntario</td>
                                <td>Mensagem</td>
                                <td colspan='3'>Acão</td>
                            </tr>
                            @foreach (MaisVoluntarios.Core.Mensagem item in Model)
                            {
                            <tr>
                                <td>@item.voluntario.nomeVoluntario</td>
                                <td>@item.mensagem</td>
                                <td><a class="btn btn-success" href="~/Instituicao/Ler/@item.idMensagem">Ler</a></td>
                                <td><a class="btn btn-info" href="~/Instituicao/Escrevermensagem/@item.voluntario.idVoluntario">Responder</a></td>
                                <td><a class="btn btn-danger" href="~/Instituicao/DeletarMsgE/@item.idMensagem">Deletar</a></td>
                                
                            </tr>
                           }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>